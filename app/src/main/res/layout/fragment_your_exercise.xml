<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".YourExerciseFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/your_exercises_rep_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        android:text="Reps" />

    <TextView
        android:id="@+id/your_exercises_rep_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/your_exercises_rep_label"
        app:layout_constraintStart_toStartOf="@id/your_exercises_rep_label"
        android:text="5,5,5"
        />

    <TextView
        android:id="@+id/your_exercises_weight_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/your_exercises_rep_label"
        android:text="Weight"
        />

    <TextView
        android:id="@+id/your_exercises_weight_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/your_exercises_weight_label"
        app:layout_constraintStart_toStartOf="@id/your_exercises_weight_label"
        android:text="167lbs"
        />

    <TextView
        android:id="@+id/your_exercises_notes_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/your_exercises_rep_text"
        android:text="Notes"
        />

    <TextView
        android:id="@+id/your_exercises_notes_text"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/your_exercises_notes_label"
        app:layout_constraintTop_toBottomOf="@id/your_exercises_notes_label"
        android:text="Insert Notes"
        />

</androidx.constraintlayout.widget.ConstraintLayout>